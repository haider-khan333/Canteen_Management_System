<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowData2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="4dp"
        android:elevation="4dp"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cardbg"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvShowOrderStatus"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="order is ready"
                android:textColor="@color/headercolor"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvShowUpdateStatus"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="status updated"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvShowDeliveryInfo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="delivered"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvShowVisitChat"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="visited chat"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvShowDeliveryLocation"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Multan"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvShowCancelOrder"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="No"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvShowDashBoard"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="dashboard"
                android:textSize="25sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>